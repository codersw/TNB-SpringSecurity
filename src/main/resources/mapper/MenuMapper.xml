<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tnb.security.demo.mapper.MenuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tnb.security.demo.entity.pojo.Menu">
        <id column="menu_id" property="menuId" />
        <result column="parent_id" property="parentId" />
        <result column="menu_name" property="menuName" />
        <result column="path" property="path" />
        <result column="component" property="component" />
        <result column="perms" property="perms" />
        <result column="icon" property="icon" />
        <result column="type" property="type" />
        <result column="order_num" property="orderNum" />
        <result column="create_time" property="createTime" />
        <result column="modify_time" property="modifyTime" />
        <result column="is_del" property="isDel" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        menu_id, parent_id, menu_name, path, component, perms, icon, type, order_num, create_time, modify_time, is_del
    </sql>

    <select id="getMenus" resultMap="BaseResultMap">
        SELECT
            t.*
        FROM
            t_menu t
            INNER JOIN t_role_menu trm ON trm.menu_id = t.menu_id
            AND t.is_del = 0
            INNER JOIN t_user_role tur ON tur.role_id = trm.role_id
            AND tur.user_id=#{userId}
    </select>
</mapper>
